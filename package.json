{
  "name": "unchain-events",
  "version": "0.1.0",
  "description": "UNCHAIN events NFT",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shiftbase-inc/UNCHAIN-events-NFT.git"
  },
  "bugs": {
    "url": "https://github.com/shiftbase-inc/UNCHAIN-events-NFT/issues"
  },
  "author": "neila <40727091+neila@users.noreply.github.com>",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@3.6.0",
  "scripts": {
    "contract": "yarn workspace contract",
    "contract:test": "yarn workspace contract test",
    "client": "yarn workspace client",
    "format:check": "prettier --ignore-unknown --no-error-on-unmatched-pattern --ignore-path .prettierignore --check .",
    "format:fix": "prettier --ignore-unknown --no-error-on-unmatched-pattern --ignore-path .prettierignore --write .",
    "lint:check": "yarn lint:js:check && yarn lint:sol:check",
    "lint:fix": "yarn lint:js:fix && yarn lint:sol:fix",
    "lint:sol:check": "solhint --config ./.solhint.json 'src/**/*.sol'",
    "lint:sol:fix": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "scan": "yarn format:check && yarn lint:check",
    "client:dev": "cp -r ./packages/contract/typechain-types ./packages/client/types/typechain-types && yarn workspace client dev"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.2",
    "simple-git-hooks": "^2.8.1",
    "solhint": "^3.3.7",
    "typescript": "5.1.3"
  }
}
