{
  "name": "unchain-events",
  "version": "0.1.0",
  "description": "UNCHAIN events NFT",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shiftbase-inc/event-nfts.git"
  },
  "bugs": {
    "url": "https://github.com/shiftbase-inc/event-nfts/issues"
  },
  "author": "neila <40727091+neila@users.noreply.github.com>",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "yarn@3.6.0",
  "scripts": {
    "contract": "yarn workspace contract",
    "contract:test": "yarn workspace contract test",
    "client": "yarn workspace client-public",
    "admin": "yarn workspace client-admin",
    "lint": "yarn workspace eslint-config-common",
    "format:check": "prettier --ignore-unknown --no-error-on-unmatched-pattern --ignore-path .prettierignore --check .",
    "format:fix": "prettier --ignore-unknown --no-error-on-unmatched-pattern --ignore-path .prettierignore --write .",
    "lint:check": "yarn lint js:check && yarn lint sol:check",
    "lint:fix": "yarn lint js:fix && yarn lint sol:fix",
    "scan": "yarn tsc && yarn format:check && yarn lint:check",
    "client:dev": "cp -r ./apps/contract/typechain-types ./apps/client/types/typechain-types && yarn workspace client dev"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.2",
    "simple-git-hooks": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "5.1.3"
  }
}
